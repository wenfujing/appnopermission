<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tc="http://schemas.android.com/apk/res-auto"
    android:background="#33000000"
    android:id="@+id/v_CleanView"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <com.wyt.floatball.libarary.view.ClearView
            android:id="@+id/garbageClear"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            tc:circleColor="@color/white"
            tc:radius="60dip"
            tc:ringBgColor="@color/white2"
            tc:ringColor="@color/colorGre"
            tc:strokeWidth="10dip"
            />

        <TextView
            android:id="@+id/clear_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="开始扫描"/>

        <TextView
            android:id="@+id/clear_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0k 可清理" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="一键清理"/>
    </LinearLayout>


</LinearLayout>